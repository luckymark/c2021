{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "gcc.exe build active file",
      "command": "C:\\mingw64\\bin\\gcc.exe",
      "args": [
        "-g",
        "-std=c18",
        "\"${file}\"",
        "-o",
        "\"${fileDirname}\\${fileBasenameNoExtension}.exe\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ],
  "options": {
    "shell": {
      "executable": "${env:SystemRoot}\\System32\\cmd.exe",
      "args": [
        "/c"
      ]
    }
  }
}